  <h1 align="center">Login</h1>
   <%= form_for(:user, :url =>   user_session_path  ) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
		    <%= f.label :password %>
		    <% if @validatable %>
		    <em>(<%= @minimum_password_length %> characters minimum)</em>
		    <% end %><br />
		    <%= f.password_field :password, autocomplete: "off" %>
		  </div>

		  
		          
          

          <div class="actions">
            <%= f.submit "Login" %>
          </div>
        <% end %>